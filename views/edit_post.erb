<form action="/posts/<%= @post["id"] %>" method="POST">
  <label for="post_title">title</label>
  <input type="text" name="title" value="<%= @post["title"] %>" id="title">
  <br/><br/>
  <label for="post_story">Story</label>
  <textarea cols="40" rows="8" name="story" value="<%= @post["story"] %>" id="story"></textarea>
  <label for="hashtags">Hashtags: </label>
  <textarea cols="40" rows="2" name="hashtags" value="<%= @post["hashtags"] %>" id="hashtags"></textarea>
  <br/><br/>
  <input type="hidden" name="_method" value="PUT">
  <input type="submit" value="Update Post">
</form>